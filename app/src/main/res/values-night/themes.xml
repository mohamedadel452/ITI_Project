<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ITI_Project" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="backgroundColor">@color/black</item>
        <item name="background">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="white.color" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="main.menu" parent="android:TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- No Action Bar -->

    <style name="Theme.ITI_Project" parent="Base.Theme.ITI_Project" />
    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">100dp</item>
        <item name="cornerSizeBottomLeft">100dp</item>
    </style>
</resources>