<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid android:color="#FF5722"/> <!-- Background color of the circle -->

    <!-- Optional: Add a border -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/> <!-- Border color of the circle -->

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>

    <!-- Size of the shape, usually this is not necessary if it's used in a View -->
    <size
        android:width="100dp"
        android:height="100dp"/>
</shape>
