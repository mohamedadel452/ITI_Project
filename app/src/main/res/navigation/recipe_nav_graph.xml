<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipe_nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.iti_project.ui.RecipeActivity.HomeFragment.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/search"
        android:name="com.example.iti_project.ui.RecipeActivity.SearchFragment.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/favourit"
        android:name="com.example.iti_project.ui.RecipeActivity.Favourit.FavouritFragment"
        android:label="Favourit"
        tools:layout="@layout/fragment_favourit" />
    <fragment
        android:id="@+id/about"
        android:name="com.example.iti_project.ui.RecipeActivity.About.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.iti_project.ui.RecipeActivity.DetailsFragment.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="id_meal"
            app:argType="string" />
    </fragment>
</navigation>